# PostgreSQL Database Connection
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/aegis_ai

# JWT Secrets (minimum 32 characters each)
# Generate using: openssl rand -base64 32
JWT_ACCESS_SECRET=your_min_32_character_access_secret_here_2024
JWT_REFRESH_SECRET=your_min_32_character_refresh_secret_here_2024

# Node Environment
NODE_ENV=development

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Encryption Key (32 character hex string)
# Generate using: openssl rand -hex 16
ENCRYPTION_KEY=your32characterhexencryptionkey0

# Redis Connection
REDIS_URL=redis://localhost:6379
